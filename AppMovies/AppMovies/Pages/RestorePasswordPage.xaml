<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovies.Pages.RestorePasswordPage">
    <Grid Margin="20,70,20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Content-->
        <StackLayout Grid.Row="0" Margin="20,0" VerticalOptions="Center">
            <Label Text="Logo" Style="{StaticResource Label}"/>
            <Label Text="Nombre de la aplicaión" Style="{StaticResource Label}"/>
        </StackLayout>
        <StackLayout Grid.Row="1" VerticalOptions="Center">
            <Label Text="Si olvidaste tu contraseña ingresa el correo con el que realizaste tu registro y te enviaremos un correo con las instrucciones para recuperar tu cuenta" />
            <Entry Placeholder="Email" Keyboard="Email"/>
        </StackLayout>
        <StackLayout Grid.Row="3" VerticalOptions="End" HorizontalOptions="Center" Margin="0,0,0,5">
            <Button Text="Send" Style="{StaticResource BtnFollow}"
                    BorderRadius="17"/>
            <Label x:Name="LblLogClick" Text="Regresar a login"/>
        </StackLayout>
    </Grid>
</ContentPage>